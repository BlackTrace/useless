~ first we move the address of the string into A
MV &word A

~ in the loop we check for the char and exit if null, if not
~ null we print the char add one to the char pointer and loop

$loop
    EQ 0 *A
    HOPT exit
    
    PRINT *A
    ADD 1 A
    HOP loop

$exit
    EXIT

